{% extends 'base_template.html.twig' %}
    
    {% block titre %}FitPulse - Accueil{% endblock %}
    {% block css %}

    <style>

        .col-md-4 {
            background: linear-gradient(-45deg, #49c249,rgb(195, 231, 195)); /* Degradado diagonal inverso */
            font-weight: bold; /* Letras en negrita */
            padding: 10px; /* Espaciado interno */
            color: #333; /* Color del texto */
        }

        .custom-heading {
            position: absolute; /* Cambiar a minúsculas */
            font-family: 'Aptos', sans-serif; /* Aplica la fuente Aptos */
            font-weight: 750; /* Usar Aptos Bold */
            font-size: 45px;
            top: 90px; /* Ajusta este valor según sea necesario */
            margin-left: 15px; /* Ajusta este valor según sea necesario */
            width: auto; /* Cambia a auto */
            height: auto; /* Mantiene la proporción de la imagen */
            color: rgb(0, 0, 0); /* Color del texto */
            z-index: 1; 
        }

        .custom-backheading {
            font-size: 45px; /* Tamaño de letra para el encabezado */
            font-family: 'Aptos', sans-serif; /* Aplica la fuente Aptos */
            font-weight: 750; /* Usar Aptos Bold */
            margin-top: 85px; /* Margen superior */
            margin-left: 10px; /* Margen izquierdo */
            text-align: left; /* Centrar el texto */
            color : rgba(0, 0, 0, 0);
            -webkit-text-stroke: 0.5px #000;
            z-index: 2; 
        }
                
        .custom-paragraph {
            font-size: 20px; /* Tamaño de letra para el párrafo */
            font-family: 'Aptos', sans-serif; /* Aplica la fuente Aptos */
            font-weight: 100; /* Usar Aptos Bold */
            text-align: justify; /* Centrar el texto */
        }

        .gmail-logo {
            position: absolute; /* Posición absoluta para colocar el logo */
            bottom: 30px; /* Distancia desde la parte inferior */
            left: 10px; /* Distancia desde la izquierda */
            width: 20px; /* Ajusta el tamaño del logo */
            height: auto; /* Mantiene la proporción de la imagen */
            z-index: 2; /* Asegúrate de que esté delante de otros elementos */
        }

        .Flech1 {
            position: absolute; /* Posición absoluta para colocar el logo */
            top: 10px; /* Distancia desde la parte inferior */
            right: -400px; /* Distancia desde la izquierda */
            width: 200px; /* Ajusta el tamaño del logo */
            height: auto; /* Mantiene la proporción de la imagen */
            z-index: 2; /* Asegúrate de que esté delante de otros elementos */
        }
        .Flech2 {
            position: absolute; /* Posición absoluta para colocar el logo */
            top: 10px; /* Distancia desde la parte inferior */
            left: 10px; /* Distancia desde la izquierda */
            width: 200px; /* Ajusta el tamaño del logo */
            height: auto; /* Mantiene la proporción de la imagen */
            z-index: 2; /* Asegúrate de que esté delante de otros elementos */
        }

        .Flech3 {
            position: absolute; /* Posición absoluta para colocar el logo */
            bottom: 20px; /* Distancia desde la parte inferior */
            right: -400px; /* Distancia desde la izquierda */
            width: 200px; /* Ajusta el tamaño del logo */
            height: auto; /* Mantiene la proporción de la imagen */
            z-index: 2; /* Asegúrate de que esté delante de otros elementos */
        }


    </style>  
    {% endblock %}


    {% block contenu %}
