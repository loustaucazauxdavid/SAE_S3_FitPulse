{# Template de base pour les pages du site #}
{# Blocs définissables par page : "titre", "css", "contenu", "script" #}

<!DOCTYPE html>
<html lang="{{ constant('WEBSITE_LANGUAGE') }}">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Titre de la page, par défaut la constante WEBSITE_TITLE #}
    <title>{% block titre %}{{ constant('WEBSITE_TITLE') }}{% endblock %}</title>

    {# Description de la page passé par le controller, par défaut la constante WEBSITE_DESCRIPTION #}
    <meta name="description" content="{{ description is defined ? description : constant('WEBSITE_DESCRIPTION') }}">

    {# CSS compilé commun dont Bootstrap #}
    <link rel="stylesheet" type="text/css" href="CSS/styles.css">

    {# CSS spécifiques à la page #}
    <link rel="stylesheet" type="text/css" href="CSS/base_template.css">

    {% block css %}{% endblock %}
</head>

<body>

{# Header #}

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid d-flex w-100" id="navbar-container-fitpulse">

            {# Logo flottant #}
            <div id="navbar-divlogo-fitpulse">
                <img id="navbar-logo-fitpulse" src="images/logo.png" alt="Fitpulse">
            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="container-fluid d-flex w-100 justify-content-between" id="navbar-content-fitpulse">
                <div class="collapse navbar-collapse" id="navbarNav">
                    
                    {# Items en début de barre #}
                    <ul class="navbar-nav">
                        <li class="nav-item active"><a class="nav-link" href="#">Accueil</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Suivi des séances</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Offres</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    </ul> 

                    {# Items en fin de barre #}                
                    <ul class="navbar-nav ms-auto d-flex align-items-center">   

                        {% if estConnecte %}   
                        <form class="form-inline d-flex align-items-center">
                            <input id="navbar-search-fitpulse" class="form-control" type="search" placeholder="Recherche" aria-label="Search">
                        </form>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <img src="images/default-profile.png" alt="Profil" class="rounded-circle" width="30" height="30">
                            </a>
                        </li>

                        {% else %}

                        <li><a href="#login" id="login-button">Se connecter</a></li>

                        {% endif %}
                    </ul>
                    
                </div>
                
            </div>
        </div>
    </nav>

    {# Contenu de la page #}
    <div class="container">
        {% block contenu %}{% endblock %}
    </div>

    {# Footer #}
    <footer class="bg-dark text-light py-4">
        <div class="container d-flex justify-content-between align-items-center">
            <p class="mb-0">
                <a href="#" class="text-light" style="text-decoration: none;">↑ Remonter</a>
            </p>
            <p class="mb-0">
                <img src="images/logo.png" alt="Fitpulse" width="40" height="40" class="me-2" id="footer-logo">
            </p>
            <p class="mb-0">
                <strong>FitPulse</strong> &copy; 2024
            </p>
        </div>
    </footer>

{# Script Bootstrap commun #}
{# JQuery et Popper ne sont plus nécessaires depuis Bootstrap v5 #}
<script src="node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>

{# Scripts spécifiques à la page #}
{% block script %}{% endblock %}

</body>

</html>
